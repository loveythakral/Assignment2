<html>
<head>
  <title>Employee Basic Report</title>
  <%- include('common/head'); %>
</head>
<body>
    <%- include('common/header'); %>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Emp ID</td>
                    <td>Emp Name</td>
                    <td>Emp Address</td>
                </tr>
            </thead>
            <tbody>
                <% empData.forEach(function (employee) { %>
                    <tr>  
                        <td><%= employee.EmpID %></td>  
                        <td><%= employee.EmpName %></td>
                        <td><%= employee.EmpAddress %></td>
                    </tr>                                   
                <% }) %>
            </tbody>
        </table>
    </div>
    <div class="container">
        <form action="/exportPDF" method="post">
            <div class="col-md-3">
                <input class="btn btn-primary btn-lg" type="submit" value="Export Report">
            </div>
        </form>
        <form action="/" method="GET">
            <div class="col-md-3 disabled">
                <a class="btn btn-primary btn-lg" href="#" role="button">Send to another User</a>
            </div>
        </form>
    <form action="/exportPDF" method="post">
    </div>
    <%- include('common/footer'); %>
</body>
</html>